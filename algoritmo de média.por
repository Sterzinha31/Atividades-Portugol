programa {
  funcao inicio() {
    //Declaração da variável
    real valorA, valorB, valorC, valorD,

    //Atribuição
    escreva ("Nota do 1º bimestre: ")
    leia (valorA)
    escreva ("Nota de 2º bimestre: ")
    leia (valorB)
    escreva ("Nota de 3º bimestre: ")
    leia (valorC)
    escreva ("Nota de 4º bimestre: ")
    leia (valorD)

    escreva ("Média do bimestre: ", ((valorA + valorB + valorC + valorD)/4))

  }
}
